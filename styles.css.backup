* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #c41e3a;
    --secondary-color: #8b0000;
    --gold-color: #ffd700;
    --bg-color: #1a1a2e;
    --card-bg: #16213e;
    --text-light: #f5f5f5;
    --text-dark: #333;
    --success-color: #4caf50;
    --table-green: #0a5f38;
}

body {
    font-family: 'Microsoft YaHei', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: var(--text-light);
    min-height: 100vh;
    overflow: hidden;
}

/* 屏幕切换 */
.screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease;
}

.screen.hidden {
    display: none;
    opacity: 0;
}

/* 登录界面 */
.login-container {
    text-align: center;
    padding: 40px;
    background: rgba(22, 33, 62, 0.9);
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    border: 2px solid var(--gold-color);
}

.game-title {
    font-size: 4rem;
    color: var(--gold-color);
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
    margin-bottom: 10px;
    font-weight: bold;
}

.game-subtitle {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 40px;
}

.login-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    min-width: 350px;
}

.login-form input {
    padding: 15px 20px;
    font-size: 1.1rem;
    border: 2px solid var(--primary-color);
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-light);
    transition: all 0.3s ease;
}

.login-form input:focus {
    outline: none;
    border-color: var(--gold-color);
    background: rgba(255, 255, 255, 0.15);
}

.login-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

/* 按钮样式 */
.btn-primary, .btn-secondary, .btn-action {
    padding: 15px 30px;
    font-size: 1.1rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: bold;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--text-light);
    box-shadow: 0 4px 15px rgba(196, 30, 58, 0.4);
}

.btn-primary:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(196, 30, 58, 0.6);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-light);
    border: 2px solid var(--gold-color);
}

.btn-secondary:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.2);
}

.btn-action {
    background: linear-gradient(135deg, #4caf50, #2e7d32);
    color: var(--text-light);
}

.btn-action:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
}

button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* 等待界面 */
.waiting-container {
    text-align: center;
    padding: 40px;
    background: rgba(22, 33, 62, 0.9);
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    border: 2px solid var(--gold-color);
    min-width: 600px;
}

.waiting-container h2 {
    color: var(--gold-color);
    margin-bottom: 20px;
    font-size: 2rem;
}

.waiting-tip {
    color: #ccc;
    margin-bottom: 30px;
    font-size: 1.1rem;
}

.players-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

.player-slot {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
}

.player-slot.active {
    border-color: var(--gold-color);
    background: rgba(255, 215, 0, 0.1);
}

.player-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--text-light);
}

.player-info {
    flex: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.player-name {
    font-size: 1.1rem;
    color: var(--text-light);
}

.ready-status {
    font-size: 0.9rem;
    color: var(--success-color);
}

/* 游戏界面 */
.game-container {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, var(--table-green) 0%, #053d24 100%);
}

.game-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    background: rgba(0, 0, 0, 0.5);
    border-bottom: 2px solid var(--gold-color);
}

.game-info {
    display: flex;
    gap: 30px;
    font-size: 1.1rem;
}

.game-info strong {
    color: var(--gold-color);
}

.dong-scores {
    font-size: 1.1rem;
    color: var(--text-light);
}

.dong-scores span:last-child {
    color: var(--gold-color);
    font-weight: bold;
    margin-left: 10px;
}

.score-display {
    font-size: 1.1rem;
    color: var(--text-light);
}

.score-display span:last-child {
    color: #4caf50;
    font-weight: bold;
    margin-left: 10px;
}

.turn-indicator {
    font-size: 1.2rem;
    color: var(--gold-color);
    font-weight: bold;
}

/* 游戏棋盘 */
.game-board {
    flex: 1;
    position: relative;
    display: grid;
    grid-template-areas: 
        ". top ."
        "left center right"
        ". . .";
    grid-template-columns: 200px 1fr 200px;
    grid-template-rows: 150px 1fr 200px;
    gap: 20px;
    padding: 20px;
}

/* 对手区域 */
.opponent-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.opponent-top {
    grid-area: top;
}

.opponent-left {
    grid-area: left;
    align-self: center;
}

.opponent-right {
    grid-area: right;
    align-self: center;
}

.player-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
    padding: 10px 15px;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    border: 2px solid var(--gold-color);
}

.player-name-label {
    font-size: 1rem;
    font-weight: bold;
    color: var(--gold-color);
}

.cards-count {
    font-size: 0.9rem;
    color: #ccc;
}

.dong-count {
    font-size: 0.85rem;
    color: var(--success-color);
    font-weight: bold;
}

.opponent-cards {
    display: flex;
    gap: 5px;
    flex-wrap: wrap;
    justify-content: center;
}

.card-back {
    width: 50px;
    height: 70px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border: 2px solid var(--gold-color);
    border-radius: 8px;
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
}

.card-back::before {
    content: '天九';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-45deg);
    color: var(--gold-color);
    font-size: 0.8rem;
    font-weight: bold;
}

/* 中央出牌区 */
.play-area {
    grid-area: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.dong-area {
    background: rgba(0, 0, 0, 0.3);
    border: 3px dashed var(--gold-color);
    border-radius: 20px;
    padding: 30px;
    min-width: 400px;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
}

.dong-title {
    font-size: 1.3rem;
    color: var(--gold-color);
    font-weight: bold;
}

.played-cards {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    justify-content: center;
}

.player-play {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 10px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
}

.player-play-label {
    font-size: 0.9rem;
    color: var(--gold-color);
}

.play-cards {
    display: flex;
    gap: 5px;
}

/* 玩家手牌区 */
.player-hand-area {
    padding: 15px 30px;
    background: rgba(0, 0, 0, 0.5);
    border-top: 2px solid var(--gold-color);
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.hand-controls {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.player-cards {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    min-height: 120px;
}

/* 牌的样式 */
.card {
    width: 80px;
    height: 112px;
    background: white;
    border: 3px solid #333;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.card img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
}

.card.selected {
    transform: translateY(-20px);
    border-color: var(--gold-color);
    box-shadow: 0 8px 20px rgba(255, 215, 0, 0.6);
}

.card.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.card.small {
    width: 50px;
    height: 70px;
}

/* 游戏结束界面 */
.gameover-container {
    text-align: center;
    padding: 60px;
    background: rgba(22, 33, 62, 0.95);
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    border: 3px solid var(--gold-color);
}

.gameover-title {
    font-size: 3rem;
    color: var(--gold-color);
    margin-bottom: 30px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
}

.winner-display {
    margin-bottom: 40px;
}

.trophy {
    font-size: 6rem;
    margin-bottom: 20px;
    animation: bounce 1s infinite;
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}

.winner-display h2 {
    font-size: 2.5rem;
    color: var(--gold-color);
    margin-bottom: 10px;
}

.winner-text {
    font-size: 1.3rem;
    color: #ccc;
}

.gameover-container button {
    margin: 10px;
}

/* Toast消息 */
.toast {
    position: fixed;
    top: 80px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: var(--text-light);
    padding: 15px 30px;
    border-radius: 10px;
    border: 2px solid var(--gold-color);
    font-size: 1.1rem;
    z-index: 10000;
    animation: slideDown 0.3s ease;
}

.toast.hidden {
    display: none;
}

@keyframes slideDown {
    from {
        transform: translateX(-50%) translateY(-100px);
        opacity: 0;
    }
    to {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
    }
}

/* 响应式设计 */
@media (max-width: 1200px) {
    .game-board {
        grid-template-columns: 150px 1fr 150px;
    }
    
    .card {
        width: 60px;
        height: 84px;
    }
}

@media (max-width: 768px) {
    .game-title {
        font-size: 2.5rem;
    }
    
    .login-form {
        min-width: 280px;
    }
    
    .waiting-container {
        min-width: 90vw;
    }
    
    .players-list {
        grid-template-columns: 1fr;
    }
}
